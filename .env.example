# Copy this file to .env and fill in your own values.
# .env is listed in .gitignore — never commit real credentials.

# MongoDB connection string (Atlas or local)
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority

# Database and collection names (defaults shown)
MONGO_DB=image_scrap
MONGO_COLLECTION=scraped_images

# Maximum number of images to download per search
MAX_IMAGES=20

# HTTP timeout in seconds for each request
REQUEST_TIMEOUT=10

# Scraping backend: "requests" (fast, default) or "selenium" (robust, needs Chrome)
SCRAPE_BACKEND=requests

# Selenium-only settings (ignored when SCRAPE_BACKEND=requests)
SELENIUM_SCROLLS=3
SELENIUM_SCROLL_PAUSE=1.5

# Flask secret key — generate with: python -c "import secrets; print(secrets.token_hex())"
SECRET_KEY=change-this-to-a-random-secret

# Set to "true" to enable Flask debug mode (never use in production)
FLASK_DEBUG=false
